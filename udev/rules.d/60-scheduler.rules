# set BFQ scheduler for non-rotating disks
ACTION=="add|change", KERNEL=="sd*[!0-9]|sr*", TEST!="queue/rotational", ATTR{queue/scheduler}="mq-deadline"
ACTION=="add|change", KERNEL=="sd*[!0-9]|sr*", ATTR{queue/rotational}=="0", ATTR{queue/scheduler}="bfq"

# set DEADLINE scheduler for rotating disks
ACTION=="add|change", KERNEL=="sd*[!0-9]|sr*", ATTR{queue/rotational}=="1", ATTR{queue/scheduler}="mq-deadline"
